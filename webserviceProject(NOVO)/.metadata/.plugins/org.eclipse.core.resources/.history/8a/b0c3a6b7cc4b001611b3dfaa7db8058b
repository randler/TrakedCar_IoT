	// ---------------------------------------- Pegar Data ------------------------------
	private static String getHora(){
		return Calendar.HOUR_OF_DAY + ":" + Calendar.MINUTE + ":" + Calendar.SECOND;
	}
	
	private static String getData(){
		String saida=  "";
		int dia = Calendar.DAY_OF_MONTH;
		int mes = Calendar.MONTH;
		int ano = Calendar.YEAR;
		
		saida = dia + "/" + (mes+1) + "/" + ano;
		return saida;
	}
	
